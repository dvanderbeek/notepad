<% if @note.author == send(Notepad.author_method) %>
  $("#<%= dom_id(@note) %> .body").html("<%= j render 'form', note: @note %>");
  $("#<%= dom_id(@note) %> .edit-link").replaceWith("<%= j link_to('Cancel', [notepad, @note], remote: true) %>");
  var input = $("#<%= dom_id(@note) %> textarea")
  var note = input.val();
  input.focus().val('').val(note);
<% end %>